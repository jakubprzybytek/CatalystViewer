html
  head 
    title Catalyst Database Update Report
    style(type="text/css").
      body {
        background-color: #fff8f0;
        font-family: sans-serif;
        -webkit-font-smoothing: antialiased;
        font-size: 14px;
        line-height: 1.4;
        margin: 0;
        padding: 8px;
        -ms-text-size-adjust: 100%;
        -webkit-text-size-adjust: 100%;
      }
      h1, h2, h3 {
        margin: 0px;
        padding: 8px 0 0 0;
      }
      main {
        max-width: 500px;
        margin: auto;
        padding: 0 16px 16px 16px;
        background-color: #ffe0b3;
        border: 1px solid brown;
        border-radius: 16px;
      }
      .header {
        text-align: center;
      }
      .key {
        font-weight: 600;
      }
  body
    main 
      div(class="header")
        h1 Catalyst Database Update Report
        p Date: #{dateTime}
      div(class="section")
        h2 New Bonds
        each bond in newBonds
          div(class="bond")
            h3 #{bond.name}
            div
              span(class="key") Issuer: 
              span #{bond.issuer}
            div
              span(class="key") Type: 
              span #{bond.type}
            div
              span(class="key") Interest: 
              span #{bond.interestVariable} + #{bond.interestConst}
            div
              span(class="key") Nominal: 
              span #{bond.nominalValue} #{bond.currency}
        else
          span None
      div(class="section")
        h2 Decomissioned Bonds
        each bond in bondsDeactivated
          div(class="bond")
            h3 #{bond.name}
            div
              span(class="key") Type: 
              span #{bond.type}
            div
              span(class="key") Issuer: 
              span #{bond.issuer}
            div
              span(class="key") Interest: 
              span #{bond.interestVariable} #{bond.interestConst}
            div
              span(class="key") Nominal: 
              span #{bond.nominalValue} #{bond.currency}
        else
          span None
